<?xml version="1.0" encoding="UTF-8"?>
<assembly
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bundle-package-sample-cucumber</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <includes>
                <include>org.mvss.karta:sample-cucumber-project</include>
            </includes>
            <outputDirectory>/lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <source>${basedir}/target/sample-cucumber-project-${version}.jar</source>
            <outputDirectory>/lib</outputDirectory>
        </file>
        <file>
            <source>${basedir}/src/main/resources/runTests.bat</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${basedir}/src/main/resources/runTests.sh</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${basedir}/src/main/resources/log4j2.xml</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/resources/features</directory>
            <outputDirectory>/features</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/properties</directory>
            <outputDirectory>/properties</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
    </fileSets>

</assembly>
